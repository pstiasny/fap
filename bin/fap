#!/bin/sh

die() {
    echo $@ >&2
    exit 1
}

find_fapfile() {
    until [ -f "fapfile.sh" ]
    do
        if [ `pwd` == "/" ]
        then
            die "No fapfile.sh found"
        fi
          
        cd .. || exit 1
    done
}

find_fapfile
. ./fapfile.sh

# fap -p <command>
# upload the fapfile before executing
if [ "x$1" == "x-p" ]
then
    scp fapfile.sh $HOST:$REMOTE
    shift
fi

ssh $HOST -t -- sh -c "\". $REMOTE/fapfile.sh && setup && $@\""

